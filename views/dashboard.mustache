<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/dashstyle.css">
    </head>
    <body>
         <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1> Dashboard</h1>
                </div> 
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                        Stats
                        </div>
                        <div class="card-body">
                            <table class="table table-dark">
                                <tr>
                                    <td>Total Stock </td>
                                    <td>Total Brands </td>
                                </tr>
                                <tr>
                                    {{#n1}}<td>{{sum}}</td>{{/n1}}
                                    {{#n2}}<td>{{count}}</td>{{/n2}}
                                </tr>
                            </table>
                        </div>
                    </div>
                </div> 
            </div>



            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                        Stats
                        </div>
                        <div class="card-body">
                            <a href="/add" class="btn btn-primary">Add Medicine </a>
                            <a href="/edit"class="btn btn-primary">Edit Medicine </a>
                            <a href="/meds"class="btn btn-primary">Medicine List</a>
                            <a class="btn btn-primary">Add Medicine </a>
                        </div>
                    </div>
                </div> 
            </div>
         </div>

